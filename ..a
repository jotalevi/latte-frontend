server {
    listen 80;
    listen 8080;
    listen 443;
    listen 8443;

    server_name api.latt3.com;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection ‘upgrade’;
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

ln -s /etc/nginx/sites-available/api.latt3.com /etc/nginx/sites-enabled/
ln -s /etc/nginx/sites-available/www.latt3.com /etc/nginx/sites-enabled/

